{
  "App": {
    "Name": "Saga",
    "Version": 1
  },

  "Logger": {
    "Level": "Information",
    "Console": {
      "Enabled": true,
      "Template": "{Timestamp:HH:mm:ss} [{Level:u3}] {Message}{NewLine}{Exception}"
    },
    "OpenTelemetry": {
      "Enabled": true
    }
  },

  "Cors": {
    "Enabled": true,
    "AllowCredentials": true,
    "AllowedOrigins": [
    ],
    "AllowedMethods": [
      "POST",
      "PUT",
      "DELETE"
    ],
    "AllowedHeaders": [
      "Content-Type",
      "Authorization"
    ],
    "ExposedHeaders": [
      "Resource-ID"
    ]
  }
}
