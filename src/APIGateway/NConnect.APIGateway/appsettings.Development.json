{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  
  "App": {
    "Name": "API Gateway",
    "Version": 1
  },

  "Logger": {
    "Level": "Information",
    "Console": {
      "Enabled": true,
      "Template": "{Timestamp:HH:mm:ss} [{Level:u3}] {Message}{NewLine}{Exception}"
    },
    "OpenTelemetry": {
      "Enabled": true
    }
  },

  "Cors": {
    "Enabled": true,
    "AllowCredentials": true,
    "AllowedOrigins": [
    ],
    "AllowedMethods": [
      "POST",
      "PUT",
      "DELETE"
    ],
    "AllowedHeaders": [
      "Content-Type",
      "Authorization"
    ],
    "ExposedHeaders": [
      "Resource-ID"
    ]
  },
  
  "ReverseProxy": {
    "Routes": {
      "saga": {
        "ClusterId": "saga",
        "Match": {
          "Path": "saga/{**catchall}"
        },
        "Transforms": [
          {
            "pathPattern": "{**catchall}"
          }
        ]
      }
    },
    "Clusters": {
      "saga": {
        "Destinations": {
          "destination1": {
            "Address": "https+http://saga"
          }
        }
      }
    }
  }
}
